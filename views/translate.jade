extends layout

block content
	h1 Translate a Word

	h3 Enter a word to translate
	form#translate-form(action="/wordSubmit", method="post")
		input#word(type="text", name="word", placeholder="Word...")
		input#to(type="text", name="from", placeholder="Language of word to translate")
		input#from(type="text", name="to", placeholder="Language to translate it into")
		input(type="submit")
	
	h4 Translation-
		p.translated